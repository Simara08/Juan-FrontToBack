@using JuanFronttoEnd.Models
@model Slider
@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <form class="form-horizontal" method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <h4 class="card-title">Create Slide</h4>
                    <div class="form-group row">
                        <label asp-for="Photo" class="col-sm-3 text-end control-label col-form-label">Select Photo</label>
                        <div class="col-sm-9">
                            <input asp-for="Photo" class="form-control">
                            <span class="text-danger" asp-validation-for="Photo"></span>
                        </div>
                    </div>
                </div>
                <div class="border-top">
                    <div class="card-body">
                        <button class="btn btn-dark">Create</button>
                        <a class="btn btn-light" asp-action="Index">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section script{
